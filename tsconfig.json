{
  "include": ["src/**/*", "src/types/**/*.d.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019"],
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "express"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "ignoreDeprecations": "5.0",
    "strict": true,
    "skipLibCheck": true
  }
}
