{
  "info": {
    "name": "TrustEdge Backend API",
    "description": "Complete API collection for TrustEdge E-commerce Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://trustedge-backend.vercel.app/api/v1",
      "type": "string"
    },
    {
      "key": "local_url",
      "value": "http://localhost:5000/api/v1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Authentication",
      "item": [
        {
          "name": "Register Admin",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Admin User\",\n  \"email\": \"admin@trustedge.com\",\n  \"password\": \"Admin123!\",\n  \"role\": \"admin\",\n  \"phone\": \"01712345678\",\n  \"address\": \"Dhaka, Bangladesh\"\n}"
            }
          }
        },
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"Password123!\",\n  \"phone\": \"01798765432\",\n  \"address\": \"Mirpur, Dhaka\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{base_url}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@trustedge.com\",\n  \"password\": \"Admin123!\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "2. Categories",
      "item": [
        {
          "name": "Create Category (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": "{{base_url}}/category",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Electronics\",\n  \"description\": \"Electronic devices and gadgets\",\n  \"image\": \"https://images.unsplash.com/photo-1498049794561-7780e7231661\"\n}"
            }
          }
        },
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/category"
          }
        }
      ]
    },
    {
      "name": "3. Products",
      "item": [
        {
          "name": "Create Product (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": "{{base_url}}/products",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"iPhone 15 Pro Max\",\n  \"description\": \"Latest Apple flagship smartphone\",\n  \"price\": 139999,\n  \"category\": \"{{category_id}}\",\n  \"brand\": \"Apple\",\n  \"stock\": 50,\n  \"images\": [\n    \"https://images.unsplash.com/photo-1696446702183-cbd49b3a42c5\"\n  ],\n  \"specifications\": {\n    \"screen\": \"6.7 inch\",\n    \"processor\": \"A17 Pro\",\n    \"ram\": \"8GB\",\n    \"storage\": \"256GB\"\n  },\n  \"tags\": [\"smartphone\", \"apple\"],\n  \"featured\": true\n}"
            }
          }
        },
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/products"
          }
        },
        {
          "name": "Get Featured Products",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/products?featured=true"
          }
        }
      ]
    }
  ]
}
